@page "/products"
@using VinhMicroservices.Model
@inject HttpClient Http
<h3>Products</h3>

<div class="row">
    @foreach (var product in products)
    {
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">Price: @Math.Round(product.Price, 1) $</p>
                    <p class="card-text">Quantity: @product.Quantity</p>
                    <a href="/cart/@product.Id" class="btn btn-primary">Buy</a>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<ProductModel> products = new List<ProductModel>();

    protected override async Task OnInitializedAsync()
    {
        products = await Http.GetFromJsonAsync<List<ProductModel>>("https://localhost:7002/api/products");
    }
}
